{
  "env": {
    "browser": true,
    "es6": true,
    "cypress/globals": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "sometimes",
        "json": "sometimes"
      }
    ]
  }
}
